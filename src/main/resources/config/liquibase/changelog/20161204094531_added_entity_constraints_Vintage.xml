<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <!--
        Added the constraints for entity Vintage.
    -->
    <changeSet id="20161204094531-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="year_id"
                                 baseTableName="vintage"
                                 constraintName="fk_vintage_year_id"
                                 referencedColumnNames="id"
                                 referencedTableName="year"/>

        <addForeignKeyConstraint baseColumnNames="max_keep_id"
                                 baseTableName="vintage"
                                 constraintName="fk_vintage_max_keep_id"
                                 referencedColumnNames="id"
                                 referencedTableName="year"/>

        <addForeignKeyConstraint baseColumnNames="wine_id"
                                 baseTableName="vintage"
                                 constraintName="fk_vintage_wine_id"
                                 referencedColumnNames="id"
                                 referencedTableName="wine"/>

    </changeSet>
</databaseChangeLog>
